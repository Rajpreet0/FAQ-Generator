// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model - synced with Supabase Auth
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  faqs      Faq[]
  faqSets   FaqSet[]
  settings  UserSettings?

  @@map("users")
}

// User Settings - stores all user preferences except dark mode
model UserSettings {
  id           String   @id @default(uuid())
  userId       String   @unique @map("user_id")
  language     String   @default("de") // de, en, fr, es
  faqCount     Int      @default(6) @map("faq_count") // 3-12
  tone         String   @default("professional") // professional, friendly, funny, simple
  model        String   @default("gpt-4o-mini") // gpt-4o-mini, gpt-4o, gpt-5-mini
  exportFormat String   @default("json") @map("export_format") // json, html, pdf
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

// FAQ Set - represents a generated set of FAQs from a website
model FaqSet {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  title       String
  sourceUrl   String?  @map("source_url")
  description String?
  seoScore    Int?     @map("seo_score")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  faqs Faq[]

  @@index([userId])
  @@map("faq_sets")
}

// Individual FAQ question and answer
model Faq {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  faqSetId  String?  @map("faq_set_id")
  question  String
  answer    String   @db.Text
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  faqSet FaqSet? @relation(fields: [faqSetId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([faqSetId])
  @@map("faqs")
}
